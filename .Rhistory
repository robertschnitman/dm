numNA <- function(x, m = NULL) {
# a la` Stata's egen rowmiss().
lenna <- function(y) length(y[is.na(y)])
if (is.null(m)) {
output <- lenna(x)
} else {
output <- apply(x, m, lenna)
}
output
}
